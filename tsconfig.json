{
    "compilerOptions": {
      "target": "es6",
      "module": "es2022",
      "rootDir": "./src",
      "moduleResolution": "node",
      "outDir": "./dist",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "plugins": [
        {
          "transform": "typescript-plugin-import-path",
          "after": true,
          "extensions": [
            ".js"
          ]
        }
      ]
    }
  }
  