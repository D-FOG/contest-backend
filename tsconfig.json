{
    "compilerOptions": {
      "target": "es2022",
      "module": "commonjs",
      "lib": ["es2022", "dom"],
      "rootDir": "./src",
      "moduleResolution": "node",
      "outDir": "./dist",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": false,
      "strictNullChecks": false, // Disable null checks
      "noImplicitAny": false,
      "skipLibCheck": true,
      "plugins": [
        {
          "transform": "typescript-plugin-import-path",
          "after": true,
          "extensions": [
            ".js"
          ]
        }
      ]
    }
  }
  